<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#80D9FF"
    tools:context=".Forum">

<!--back_button_binomial-->
    <ImageButton
        android:id="@+id/back_button_binomial"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:background="#80D9FF"
        android:contentDescription="@string/back_arrow"
        android:tint="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="?attr/homeAsUpIndicator" />

<!--binomial_title-->
    <TextView
        android:id="@+id/binomial_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/exo"
        android:text="@string/binomial_title"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.039" />

<!--home_button_binomial-->
    <ImageButton
        android:id="@+id/home_button_binomial"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:background="#80D9FF"
        android:contentDescription="@string/back_arrow"
        android:tint="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.971"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@android:drawable/arrow_up_float" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/white"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/binomial_title"
        app:layout_constraintBottom_toTopOf="@+id/QR_button_binomial"

        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="32dp"
        >

<!--textView_passCount-->
        <TextView
            android:id="@+id/textView_passCount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/textView_passDisplay"
            app:layout_constraintTop_toTopOf="parent"

            android:layout_marginTop="32dp"

            android:text="Pass: "
            android:textSize="20dp"
            android:gravity="right"
            />

<!--textView_passDisplay-->
        <TextView
            android:id="@+id/textView_passDisplay"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            app:layout_constraintLeft_toRightOf="@+id/textView_passCount"
            app:layout_constraintRight_toRightOf="parent"

            app:layout_constraintBottom_toBottomOf="@+id/textView_passCount"

            android:text="xx"
            android:textSize="20dp"
            />

<!--textView_failCount-->
        <TextView
            android:id="@+id/textView_failCount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/textView_failDisplay"
            app:layout_constraintTop_toBottomOf="@+id/textView_passCount"

            android:text="Fail: "
            android:textSize="20dp"
            android:gravity="right"
            />

<!--textView_failDisplay-->
        <TextView
            android:id="@+id/textView_failDisplay"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            app:layout_constraintLeft_toRightOf="@+id/textView_failCount"
            app:layout_constraintRight_toRightOf="parent"

            app:layout_constraintBottom_toBottomOf="@+id/textView_failCount"

            android:text="xx"
            android:textSize="20dp"
            />

<!--pass_button_binomial-->
        <Button
            android:id="@+id/pass_button_binomial"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/fail_button_binomial"
            app:layout_constraintTop_toBottomOf="@id/textView_failCount"

            android:layout_marginLeft="16dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="16dp"

            android:text="pass"
            android:textSize="32dp"
            />

<!--fail_button_binomial-->
        <Button
            android:id="@+id/fail_button_binomial"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            app:layout_constraintLeft_toRightOf="@+id/pass_button_binomial"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView_failCount"

            android:layout_marginLeft="8dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="16dp"

            android:text="fail"
            android:textSize="32dp"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

<!--QR_button_binomial-->
    <Button
        android:id="@+id/QR_button_binomial"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:fontFamily="@font/exo"
        android:text="@string/qr"
        android:textColor="#FFFFFF"
        android:textSize="40sp"
        app:backgroundTint="#80D9FF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.091"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.977" />

<!--done_button_binomial-->
    <Button
        android:id="@+id/done_button_binomial"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:fontFamily="@font/exo"
        android:text="@string/done"
        android:textColor="#FFFFFF"
        android:textSize="40sp"
        app:backgroundTint="#80D9FF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.869"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.977" />

</androidx.constraintlayout.widget.ConstraintLayout>